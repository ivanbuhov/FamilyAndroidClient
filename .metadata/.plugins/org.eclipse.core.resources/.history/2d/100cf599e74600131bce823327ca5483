package com.buhov.family;

import java.util.List;

import android.os.Bundle;
import android.preference.PreferenceActivity;
import android.preference.PreferenceActivity.Header;
import android.preference.PreferenceManager;
import android.app.Activity;
import android.view.Menu;

public class SettingsActivity extends PreferenceActivity {
	
	final static String ACTION_PREFS_ACCOUNT = "com.buhov.family.prefs.PREFS_ACCOUNT";
	final static String ACTION_PREFS_PEDIGREES = "com.buhov.family.prefs.PREFS_PEDIGREES";
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		
		String action = getIntent().getAction();
	    if(action != null) {
	    	if (action.equals(ACTION_PREFS_ACCOUNT)) {
		        addPreferencesFromResource(R.xml.prefs_account);
		    }
	    }
	}
	
	@Override
    public void onBuildHeaders(List<Header> target) {
        loadHeadersFromResource(R.xml.pref_headers, target);
    }

}
